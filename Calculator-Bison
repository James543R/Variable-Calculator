%{
    /* definitions */
    #include <stdio.h>
    #include <stdlib.h>
    #include "calc.tab.h"
    #include <string.h>
    #include <stdbool.h>

    extern int yylex(void);
    extern int yyerror(const char *s);
    
    typedef struct {
        char* name;
        double value;
    } Variable;

    Variable variables[100];
    int var_count = 0;
    int has_var = 0;
    int dont_print = 0;

    void assign_variable(char* name, double value);
    double variable_value(char* name);
    void list();
    void clear();
    void print(char* name);
    bool variable_exists(char* name);
    void should_print();

%}

%union {
    double num;
    char* sym;
}

%token EOL PRINT LIST CLEAR DONTPRINT
%token<num> NUMBER
%type<num> exp
%token<sym> VARIABLE

%right '=' '^'
%left '+' '-'
%left '*' '/'


%%

input:
    | input exp EOL { 
        if(has_var == 0){
            printf("Result: %g\n", $2); 
        }
        has_var = 0;
    }
    ;

exp:
    NUMBER { $$ = $1; }
    | exp '+' exp { $$ = $1 + $3; }
    | exp '-' exp { $$ = $1 - $3; }
    | exp '*' exp { $$ = $1 * $3; }
    | exp '/' exp {
        if($3 == 0){
            yyerror("DIVISION BY ZERO");
        }
        else{
            $$ = $1 / $3; 
        }
    }
    | '(' exp ')' { $$ = $2; }
    | VARIABLE { $$ = variable_value($1); }
    | VARIABLE '=' exp { $$ = $3; assign_variable($1, $3);  }
    | PRINT VARIABLE { print($2); }
    | LIST { list(); }
    | CLEAR { clear(); }
    | DONTPRINT { should_print(); }
    ;

%%

void assign_variable (char* name, double value) {
    for (int i = 0; i < var_count; i++) {
        if (strcmp(variables[i].name, name) == 0) {
            variables[i].value = value;
            has_var = 1;
            if(dont_print == 0){
                printf("%s's value overwritten: %s = %g\n", name, name, value);
            }
            return;
        }
    }
    variables[var_count].name = name;
    variables[var_count].value = value;
    var_count++;
    has_var = 1;
    if(dont_print == 0){
        printf("New assignment: %s = %g\n", name, value);
    }
}

double variable_value (char* name) {
    for (int i = 0; i < var_count; i++) {
        if (strcmp(variables[i].name, name) == 0) {
            return variables[i].value;
        }
    }
    yyerror("UNDEFINED VARIABLE");
    return 0;
}

void list() {
    printf("List of all variables and their values:\n");
    if(var_count == 0){
        printf("ERROR: NO CURRENTLY ASSIGNED VARIABLES\n");
        return;
    }
    else{
        for(int i = 0; i < var_count; i++){
            printf("\t%s = %g\n", variables[i].name, variables[i].value);
        }
    }
}

void clear() {
    for(int i = 0; i < var_count; i++) {
        variables[i].name = NULL;
    }
    printf("All variable names cleared\n");
    var_count = 0;
    return;
}

void print(char* name){
    if(variable_exists(name)){
        printf("Result: %s = %g\n", name, variable_value(name));
        has_var = 1;
    }
}

bool variable_exists(char* name){
    for(int i = 0; i < var_count; i++){
        if(strcmp(variables[i].name, name) == 0) {
            return true;
        }
    }
    return false;
}

void should_print(){
    dont_print = 1;
}

int yyerror(const char *s) {
    fprintf(stderr, "ERROR: %s\n", s);
    return 0;
}

int main() {
    printf("Enter mathematical expression/s:\n");
    return yyparse();
}
int main() {
    printf("Enter math:\n");
    return yyparse();
}
