%{
// C code declarations and headers
    #include <stdio.h>
    #include <string.h>
    #include <errno.h>
    #include <stdlib.h>
    #include "calc.tab.h"
%}

%option noyywrap

%%

[ \t]+ /* Ignores white space */

[0-9]+ { yylval.num = atoi(yytext); return NUMBER; }
[a-zA-Z]+ { yylval.sym = strdup(yytext); return VARIABLE; }

"+" { return '+'; }
"-" { return '-'; }
"*" { return '*'; }
"/" { return '/'; }
"(" { return '('; }
")" { return ')'; }
";" { return ';'; }
"=" { return '='; }

\n {return EOL;}
. { printf("Error: %s\n", yytext); }

%%
